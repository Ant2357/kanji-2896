{
  "manifest_version": 3,
  "name": "つば九郎の Ameba ブログにて、ひらがな文章を漢字変換する拡張",
  "version": "1.0.0.0",
  "description": "つば九郎の Ameba ブログにて、ひらがな文章を漢字変換する拡張です。",
  "icons": {
    "16": "assets/imgs/icons/icon16.png",
    "48": "assets/imgs/icons/icon48.png",
    "128": "assets/imgs/icons/icon128.png"
  },
  "action": {
    "default_icon": "assets/imgs/icons/icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "background": {
    "service_worker": "background.js",
    "matches": ["https://ameblo.jp/2896-blog/*"]
  },
  "host_permissions": ["https://ameblo.jp/2896-blog/*"]
}
